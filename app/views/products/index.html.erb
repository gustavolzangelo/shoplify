<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
      <%= button_to "Buy", checkout_create_path, params: {id: product.id}, remote: true %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
